<!-- index.html -->
<%- include ('../partials/head') %>
<%- include ('../partials/menu') %>

<!DOCTYPE html>
<html>
<style>
  /* Your CSS styles go here */
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f0f8ff;
    margin: 0;
    padding: 0;
  }

  .user-profile {
    position: fixed;
    top: 10px;
    right: 10px;
    display: flex;
    align-items: center;
  }

  #profile-icon {
    width: 40px;
    height: 40px;
    cursor: pointer;
    border-radius: 50%;
  }

  .user-profile-menu {
    display: none;
    position: absolute;
    top: 60px;
    right: 0;
    background-color: #fff;
    border: 1px solid #ccc;
    padding: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .high-text {
    color: red;
  }

  h1 {
    color: #333;
  }

  h2 {
    color: #ff6347;
    margin-top: 10px;
  }

  .row img {
    max-width: 80%;
    display: block;
    margin: 20px auto;
  }

  .info-box {
    background-color: #fff;
    border: 1px solid #ddd;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
    padding: 15px;
    margin-top: 20px;
    margin-bottom: 20px; /* Add margin at the bottom */
  }

  .info-box p {
    margin: 0;
    color: #555;
    font-size: 24px;
    line-height: 1.6;
  }

  .legend {
    margin-top: 20px;
    margin-left: 20px; /* Add margin to the left side */
  }

  .legend-item {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }

  .legend-color {
    width: 20px;
    height: 20px;
    margin-right: 10px;
  }

  /* Add styles for each danger rating */
  .danger-rating-1 {
    background-color: green;
  }

  .danger-rating-2 {
    background-color: yellow;
  }

  .danger-rating-3 {
    background-color: orange;
  }

  .danger-rating-4 {
    background-color: red;
  }

  .danger-rating-5 {
    background-color: black;
  }

  .map-update-note {
    color: #777;
    font-size: 14px;
    margin-top: 10px;
    margin-left: 20px;
  }

  .learn-link {
    color: #007bff;
    text-decoration: underline;
    cursor: pointer;
  }

</style>

<script src="/All%20Project%20code/src/resources/script.js"></script>

<main>
  <div class="container">
    
    <!-- THE REST OF YOUR HTML CODE GOES HERE -->    
    <h1>Avalanche Conditions & Forecasts</h1>

    <div class="col"><%- include ('../partials/message') %></div>
      <div class="row">
        <% if (latestAvyProblem && latestAvyProblem.image_path) { %>
            <img src="<%= latestAvyProblem.image_path %>" alt="avalanche map">
        <% } else { %>
            <p>No image available.</p>
        <% } %>
    </div>
  </div>
    <div class="info-box">
      <% if (latestAvyProblem) { %>
        <p><strong>Danger Rating:</strong> <%= latestAvyProblem.danger_rating %></p>
        <p><strong>Avy Problem:</strong> <%= latestAvyProblem.avalanche_type %></p>
        <p><strong>Synopsis:</strong> <%= latestAvyProblem.synopsis %></p>
      <% } else { %>
        <p>No data available.</p>
      <% } %>
    </div>

    <div class="legend">
      <div class="legend-item">
        <div class="legend-color danger-rating-1"></div>
        <span>Low (1)</span>
      </div>
      <div class="legend-item">
        <div class="legend-color danger-rating-2"></div>
        <span>Moderate (2)</span>
      </div>
      <div class="legend-item">
        <div class="legend-color danger-rating-3"></div>
        <span>Considerable (3)</span>
      </div>
      <div class="legend-item">
        <div class="legend-color danger-rating-4"></div>
        <span>High (4)</span>
      </div>
      <div class="legend-item">
        <div class="legend-color danger-rating-5"></div>
        <span>Extreme (5)</span>
      </div>
    </div>

    <div class="map-update-note">Note: The map is updated when the snowpack changes.</div>
    <div class="map-update-note">For more information, <a class="learn-link" href="/Learn">visit our Learn page</a>.</div>
  </div>
</main>
</html>

<%- include ('../partials/footer') %>
