<%- include ('../partials/menu') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      height: 100vh;
      background-color: #b3e0ff; /* Light blue background */
    }

    main {
      background-color: #ffffff;
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
      width: 400px;
      text-align: center;
      margin-top: 20px;
    }

    h1, h2 {
      color: #4d94ff; /* Darker blue text */
      margin-bottom: 20px;
    }

    form {
      display: flex;
      flex-direction: column;
      margin-top: 20px;
    }

    label {
      margin-bottom: 8px;
      color: #3366cc; /* Blue label color */
    }

    input {
      padding: 12px;
      margin-bottom: 16px;
      border: 1px solid #3366cc; /* Blue border */
      border-radius: 10px;
      transition: border-color 0.3s;
      width: 100%;
      box-sizing: border-box;
      padding-left: 40px; /* Space for the snowflake icon */
    }

    input:focus {
      border-color: #1a45a5; /* Darker blue on focus */
    }

    .snowflake-icon {
      position: absolute;
      margin-top: 16px;
      margin-left: 12px;
      color: #1a45a5;
    }

    .blue-button {
      background-color: #1a45a5; /* Dark blue button */
      color: #ffffff;
      padding: 12px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      transition: background-color 0.3s;
      width: 100%;
      box-sizing: border-box;
    }

    .blue-button:hover {
      background-color: #0c2b66; /* Even darker blue on hover */
    }

    p {
      color: #3366cc; /* Blue text color */
      margin-top: 16px;
    }
  </style>
</head>
<body>
  <main>
    <form method="post" action="/reports/add">
      <!-- Add form fields for updating home page -->
      <div class="form-section">
        <label for="imagePath">report id:</label>
        <input type="text" id="report_id" name="report_id" required>
      </div>
      <div class="form-section">
        <label for="imagePath">observations:</label>
        <input type="text" id="observations" name="observations" required>
      </div>
      <div class="form-section">
        <label for="imagePath">date:</label>
        <input type="time" class="form-control" value="time" />
      </div> 
      <div class="form-section">
        <label for="imagePath">Image Path:</label>
        <input type="text" id="Image Path" name="Image Path" required>
      </div>
      <div class="form-section">
        <label for="imagePath">location:</label>
        <input type="text" id="location" name="location" required>
      </div>
      <input type="submit" value="Submit" class="blue-button" />
  </main>

<%- include ('../partials/footer') %>
</body>
</html>
